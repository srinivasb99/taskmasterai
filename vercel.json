{
  "version": 2,
  "builds": [
    {
      // 1. Build any serverless API routes in /api
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    },
    {
      // 2. Build your front-end as a static site from package.json scripts
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        // This should match the folder your build script outputs
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    // Make /api/... point to your serverless functions
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "handle": "filesystem"
    },
    // Serve all other requests (the front-end) from index.html in dist
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
